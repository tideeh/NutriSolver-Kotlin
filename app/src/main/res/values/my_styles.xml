<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="botao_confirmar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/exo_2</item>
        <item name="android:textColor">@color/textOnSecundary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">@drawable/ripple_effect_principal</item>
    </style>

    <style name="botao_cancelar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/exo_2</item>
        <item name="android:textColor">@color/textOnSecundary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">@drawable/ripple_effect_secundario</item>
    </style>

    <style name="texto_cabecalho">
        <item name="android:elevation" tools:targetApi="lollipop">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/exo_2</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/textOnPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="floating_button_add">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">20dp</item>
        <item name="fabSize">auto</item>
        <item name="android:tint">@color/textOnSecundary</item>
        <item name="fabCustomSize">60dp</item>
        <item name="maxImageSize">30dp</item>
        <item name="srcCompat">@drawable/baseline_add_black_48</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/colorPrimaryLight</item>
        <item name="rippleColor">@color/colorPrimary</item>
    </style>

    <style name="FullyTranslucent" parent="android:Theme.Translucent.NoTitleBar">
        <item name="android:progressBarStyle">@style/InvisibleProgress</item>
    </style>

    <style name="InvisibleProgress">
        <item name="android:visibility">gone</item>
    </style>

    <style name="my_progress_bar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint" tools:targetApi="lollipop">@color/colorPrimaryLight</item>
    </style>

    <style name="divider_horizontal_toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.1dp</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="divider_horizontal_sidebar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#e5e5e5</item>
    </style>

</resources>